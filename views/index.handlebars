{{!-- * Setup the `index.handlebars` to have the template that Handlebars can render onto. --}}

<h1 class="text-center">Eat-Da-Burger!</h1>

{{!-- Draw a burger! --}}
<div class="burger-tray">
  <div class="burger">
    <div class="burger-top-bun"></div>
    <div class="lettuce"></div>
    <div class="cheese"></div>
    <div class="tomato"></div>
    <div class="patty"></div>
    <div class="lettuce"></div>
    <div class="cheese"></div>
    <div class="patty"></div>
    <div class="burger-bottom-bun"></div>
  </div>
</div>

{{!-- List the uneaten with a Devour button next to them, and a devoured list. --}}

<div class="container">
  <div class="burgers text-center">
    <div class="w-50">
      <h2>Uneaten Burgers:</h2>
      <ul id="uneaten-list">
        {{#each burgers}}
          {{#unless devoured}}
            <li>{{ id }}. {{ burger_name }} <button data-id="{{ id }}">Devour it!</button></li>
          {{/unless}}
        {{/each}}
      </ul>
    </div>

    <div class="w-50">
      <h2>Devoured Burgers:</h2>
      <ul id="eaten-list">
        {{#each burgers}}
          {{#if devoured}}
            <li>{{ id }}. {{ burger_name }}</li>
          {{/if}}
        {{/each}}
      </ul>
    </div>
  </div>
</div>

{{!-- Show a form to add new burgers. --}}

<form class="text-center" id="burgerForm">
  <div>
    <input type="text-align: center" id="burgerInput" name="burgerName">
    <button type="submit">Submit</button>
    <br>
    <label for="burgerInput">Enter a new burger you want to eat, and click the Submit button.</label>
    </div>
</form>



